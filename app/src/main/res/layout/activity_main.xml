<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:background="@color/black"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnCLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:onClick="onClear"
            android:text="C"
            android:textSize="25dp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/btnBackSpace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onCE"
            android:text="CE"
            android:textSize="25dp"
            android:backgroundTint="#FE9F00"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/btnPrecent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onPercent"
            android:text="%"
            android:textSize="25dp"
            android:backgroundTint="#FFA000"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />



        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="#FFA000"
            android:textColor="@color/white"
            android:text="/"
            android:textSize="25dp"

            app:cornerRadius="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit7"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit8"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit9"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />


        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="#FFA000"
            android:textColor="@color/white"
            android:text="*"
            android:textSize="25dp"

            app:cornerRadius="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit4"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit5"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="@string/digit6"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />


        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="#FFA000"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="25dp"
            app:cornerRadius="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="1"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="2"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="3"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="10dp" />





        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="+"
            android:backgroundTint="#FFA000"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:cornerRadius="15dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:onClick="onDigit"
            android:text="0"
            android:textSize="25dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDecimalPoint"
            android:text="."
            android:textSize="40dp"
            android:backgroundTint="#141415"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />



        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onEqual"
            android:backgroundTint="@color/light_sea_green"
            android:textColor="@color/white"
            android:text="="
            android:textSize="25dp"

            app:cornerRadius="15dp" />


    </LinearLayout>

</LinearLayout>